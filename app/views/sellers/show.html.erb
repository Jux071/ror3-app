<% provide(:title, "Seller Details") %>
  <div class="row col-md-5 col-md-offset-3">
	<div class="panel panel-primary" style="width: 100%">
  	<div class="panel-heading">
    	<h3 class="panel-title">Name</h3>
  	</div>
  	<div class="panel-body">
    	<%= @seller.name %>
  	</div>
  	<div class="panel-heading">
    	<h3 class="panel-title">Rating</h3>
  	</div>
  	<div class="panel-body">
     <strong><%= render_stars @seller.rating %> </strong>
  	</div>
	</div>
  </div>
  <div class="row col-md-9 col-md-offset-1">
	<%= render 'products' %>

	<div class="panel panel-primary">
  	<div class="panel-body">
    	<%= link_to 'Back to sellers', sellers_path %>
  	</div>
	</div>

</div>