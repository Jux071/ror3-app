<% provide(:title, "Seller Details") %>
  
	<div class="panel panel-info" style="width: 20%">
  	<div class="panel-heading">
    	<h3 class="panel-title">Name</h3>
  	</div>
  	<div class="panel-body">
    	<%= @seller.name %>
  	</div>
  	<div class="panel-heading">
    	<h3 class="panel-title">Rating</h3>
  	</div>
  	<div class="panel-body">
    	<%= @seller.rating %>
  	</div>
	</div>
  
	<%= render 'products' %>

	<div class="panel panel-default">
  	<div class="panel-body">
    	<%= link_to 'Back to sellers', sellers_path %>
  	</div>
	</div>
