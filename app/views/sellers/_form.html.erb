<%= form_for @seller do |form|%>	
  <%= form.label :name %>
  <%= form.text_field :name, autofocus: :true, class: 'form-control' %>
  <br>
  <%= form.label :rating %>
  <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
  <%= form.text_field :rating, class: 'form-control' %>
  <br>  
  <%= form.submit params[:action] == 'new' ? 'Save' : 'Update', class: 'btn btn-block btn-default' %>
<% end %>