<% provide(:title, "New Seller") %>
 <div class = "row">
   <div class = "col-md-4 col-md-offset-4">
   <br>
   <h1>New seller</h1>
   <br>

   	<%= render 'shared/validation_messages', model: @seller %>

    <%= form_for @seller do |form|%>	
      <%= form.label :name %>
    	<%= form.text_field :name, class: 'form-control' %>
    	<br>
    	<%= form.label :rating %>
      <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
    	<%= form.text_field :rating, class: 'form-control' %>
    	<br>
    	<%= form.submit 'Save', class: 'btn btn-block btn-default' %>
    <% end %>

   </div>
 </div>