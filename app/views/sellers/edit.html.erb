<% provide(:title, "Edit Seller") %>
<div class = "row">
   <div class = "col-md-4 col-md-offset-4">
   <br>
   <h1>Update seller</h1>
   <br>

    <% if @seller.errors.any? %>
      <div class="alert alert-danger">
        <% @seller.errors.full_messages.each do |error| %>
          <p><%= error %></p>
        <% end %>
        </div>
    <% end %>

    <%= form_for @seller do |form|%> 
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
      <br>
      <%= form.label :rating %>
      <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
      <%= form.text_field :rating, class: 'form-control' %>
      <br>
      <%= form.submit 'Update', class: 'btn btn-block btn-default' %>
    <% end %>

   </div>
 </div>