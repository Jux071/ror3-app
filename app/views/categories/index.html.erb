<% provide(:title, "Categories") %>
<div class="container">
	<h3>All Categories <%= link_to 'Create new', new_category_path %> </h3>
	<% unless flash[:notice].blank? %>
		<div class="alert alert-success">
			<p><%= flash[:notice] %></p>
		</div>
	<% end %>
	<div class="row col-md-6">
	  <table class="table table-hover">	
		<thead>
			<tr>
    		<th>id</th>
    		<th>Name</th>
    		<th>Actions</th>
			</tr>
		</thead>

		<tbody>
		<% @categories.each do |category| %>
			<tr>
	<td><%= category.id %></td>	
	<td><%= link_to category.name, category_path(category) %></td>	
	<td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-sm btn-primary' %>
			<%= link_to 'Delete', category_path(category), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-sm btn-danger' %></td>
</tr>
<% end %>
		</tbody>
	</table>
</div>
</div>
