<% provide(:title, "Categories") %>

<div class="row col-md-6">
	<div class="well well-sm"><h3>Categories <%= link_to 'Add new', new_category_path, class: 'btn btn-sm btn-primary' %> </h3>
	<%= count_for @categories%>
	<% unless flash[:notice].blank? %>
		<div class="alert alert-success">
			<p><%= flash[:notice] %></p>
		</div>
	<% end %>	
	</div>

<div class="panel panel-default">
  <div class="panel-heading"><strong>Category details</strong></div>

  <table class="table table-hover table-striped">	
		<thead>
			<tr>
     		<th>Name</th>
    		<th>Actions</th>
			</tr>
		</thead>

		<tbody>		
		<%= render 'category' %>
		</tbody>
	</table>
</div>


