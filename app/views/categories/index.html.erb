<% provide(:title, "Categories") %>

<div class="row col-md-6">
	<div class="well well-sm"><h3>Categories <%= link_to 'Add new', new_category_path, class: 'btn btn-sm btn-primary' %> </h3></div>
	<div class="well well-sm"><%= count_for @categories%></div>
	<% unless flash[:notice].blank? %>
		<div class="alert alert-success">
			<p><%= flash[:notice] %></p>
		</div>
	<% end %>
	
	
	
	
	  
<div class="panel panel-default">

  <div class="panel-heading"><strong>Category details</strong></div>

  <table class="table table-hover table-striped">	
		<thead>
			<tr>
     		<th>Name</th>
    		<th>Actions</th>
			</tr>
		</thead>

		<tbody>
		<% @categories.each do |category| %>
			<tr>
		<td><%= link_to category.name, category_path(category) %></td>	
	<td><%= link_to 'Edit', edit_category_path(category), class: 'btn btn-sm btn-primary' %>
			<%= link_to 'Delete', category_path(category), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-sm btn-danger' %></td>
</tr>
<% end %>
		</tbody>
	</table>
</div>


</div>

