<div class="container">
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">About us</h3>
  </div>
  <div class="panel-body">    
		<p><%= @about %></p>
  </div>
</div>

<div class="row">
  <div class="col-sm-4">
    <div class="card card-inverse card-success mb-3 text-center">
      <div class="card-block">
        <h3 class="card-title">Our History</h3>
        <p class="card-text" style="background-color:powderblue;"><%= @history %></p>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="card card-inverse card-info mb-3 text-center">
      <div class="card-block">
        <h3 class="card-title">Our Goals</h3>
        <p class="card-text" style="background-color:lightgreen;"><%= @goals %></p>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="card card-inverse card-warning mb-3 text-center">
      <div class="card-block">
        <h3 class="card-title">Our People</h3>
        <p class="card-text" style="background-color:lightpink;"><%= @people %></p>        
      </div>
    </div>
  </div>
</div>
</div>