<% provide(:title, "Products") %>
<div class="container">
	<h3>All Products <%= link_to 'Create new', new_product_path %></h3>
	<% unless flash[:notice].blank? %>
		<div class="alert alert-success">
			<p><%= flash[:notice] %></p>
		</div>
	<% end %>
	<div class="row col-md-6">
	  <table class="table table-hover">	
		<thead>
			<tr>
    		<th>id</th>
    		<th>Name</th>
    		<th>Price</th>
    		<th>Actions</th>
			</tr>
		</thead>

		<tbody>
			<%= render @products %>
		</tbody>
	</table>
</div>
</div>