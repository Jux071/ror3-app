<div class="container">
	<h3>All Products <%= link_to 'Create new', new_product_path %></h3>
	<% unless flash[:notice].blank? %>
		<div class="alert alert-success">
			<p><%= flash[:notice] %></p>
		</div>
	<% end %>
	<div class="row col-md-5">
	<table class="table table-hover">	
		<thead>
			<tr>
    		<th>id</th>
    		<th>Name</th>
    		<th>Price</th>
    		<th>Actions</th>
			</tr>
		</thead>

		<tbody>
			<% @products.order("price DESC").each do |product| %>
			<tr>
				<td><%= product.id %></td>	
				<td><%= link_to product.name, product_path(product) %></td>	
				<td><%= product.price %></td>	
				<td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-sm btn-primary' %>
				    <%= link_to 'Delete', product_path(product), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-sm btn-danger' %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
</div>