<% provide(:title, "Products") %>
<div class="container">
	<h3>All Products <%= link_to 'Create new', new_product_path %> </h3>
	<%= count_for @products%>
	<% unless flash[:notice].blank? %>
		<div class="alert alert-success">
			<p><%= flash[:notice] %></p>
		</div>
	<% end %>
	<div class="row col-md-9">
	  <table class="table table-hover">	
		<thead>
			<tr>
    		<th>Name</th>
    		<th>Price</th>
    		<th>Seller</th>
    		<th>Category</th>
    		<th>Created at</th>
    		<th>Actions</th>
			</tr>
		</thead>

		<tbody>
			<%= render @products.order(price: :desc) %>
		</tbody>
	</table>
</div>
</div>